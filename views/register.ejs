
<h2>Registeration Page</h2>
<form method="post" action="/user/register">

	<div class="input-group">
	  
	  <input name="name" type="text" class="form-control" placeholder="Name" aria-describedby="basic-addon1">
	</div>
	<br>

	<div class="input-group">
	  
	  <input name="email" type="text" class="form-control" placeholder="E-Mail" aria-describedby="basic-addon1">
	</div>
	<br>

	<div class="input-group">
	  
	  <input name="birthdate" type="date" class="form-control" placeholder="Birth Date" aria-describedby="basic-addon1">
	</div>
	<br>

	<div class="input-group">
	  
	  <input name="degree" type="text" class="form-control" placeholder="Degree" aria-describedby="basic-addon1">
	</div>
	<br>


	<div class="input-group">
	  
	  <input name="username" type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
	</div>
	<br>

	<div class="input-group">
	  <input name="password" type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2">
	</div>
	<br>

    <select name="type">
        <option value="student">student</option>
        <option value="visitor">visitor</option>
    </select>

	<input value="register" type="submit" class="btn btn-default">
	
</form>