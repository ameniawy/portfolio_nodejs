
<ul class="list-group">
	<% users.forEach(function(user){%>
  <li class="list-group-item"><h3>Name: <%= user.name %></h3><p>Age: <%= user.age %></p></li>
	<% }); %>
</ul>

<form method="post" action="/add">

	<div class="input-group">
	  
	  <input name="name" type="text" class="form-control" placeholder="Name" aria-describedby="basic-addon1">
	</div>
	<br>

	<div class="input-group">
	  <input name="age" type="number" class="form-control" placeholder="Age" aria-describedby="basic-addon2">
	</div>
	<br>

	<input type="submit" class="btn btn-default">
</form>
